<div class="container-fluid profile">
  <div class="row">
    <div class="col-md-2 col-md-offset-2 left-column">
      <%= gravatar_image_tag(@user.email, :gravatar => { :size => 200 }, class: "avatar") %>
    </div>
    <div class="col-lg-8">
      <h1>I'm <%= @user.name %> and you're awesome.</h1>
      <p><strong>City:</strong> <%= @user.city %></p>
      <h3>Trade-Offers:</h3>
      <ul>
        <% @user.provisions.each do |provision| %>
        <li><%= provision.description %></li>
        <% end %>
      </ul>
      <%= form_tag(conversations_path, { class: "form", role:"form" }) do %>
        <div class="form-group">
          <textarea class="form-control" rows="3"></textarea>
        </div>
        <div class="row">
          <div class="col-md-offset-8">
            <button type="submit" class="btn btn-primary">Negotiate</button>
          </div>
        </row>
      <% end %>
    </div>
  </div>

</div>