<%= form_tag(session_path, { id: "form-login", class: "form subscribe", role:"form", remote: true }) do %>
  <div class="form-group">
    <input type="email" class="form-control" name="session[email]" placeholder="Email" required>
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="session[password]"placeholder="Password" required>
  </div>
  <button type="submit" class="btn btn-primary pull-right">Submit</button>
<% end %>